<script>
  function handleLoginSubmit() {
    $.ajax({
      url: '/api/auth/login',
      type: 'POST',
      data: { email: $("#email").val(), password: $("#password").val() },
      success: function ({result}) {
        localStorage.setItem('token', result.token)
        window.location.replace('/contacts');
      },
      error: function () {
        alert('Error!')
      }
    })
  }
</script>

<form onsubmit="handleLoginSubmit(); return false;">
  <label for="email">Email</label><br>
  <input id="email" type="text" id="email" name="email"><br>
  <label for="password">Password</label><br>
  <input id="password" type="password" id="password" name="password"><br><br>
  <input type="submit" value="Login">
</form>
<div>Don't have an account? <a href="/register">Register</a></div